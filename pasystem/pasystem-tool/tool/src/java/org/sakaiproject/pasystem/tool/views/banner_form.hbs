<form class="form-horizontal">
  <div class="form-group">
    <label  class="col-sm-2 control-label" for="message">Message</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" name="message" id="message" required />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="active">Active</label>
    <div class="col-sm-10">
      <input class="form-control" type="checkbox" name="active" id="active"/>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="dismissible">Dismissible</label>
    <div class="col-sm-10">
      <input class="form-control" type="checkbox" name="dismissible" id="dismissible"/>
    </div>
  </div>
  <div class="form-group">
    <label  class="col-sm-2 control-label" for="start_time">Start Time</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" name="start_time" id="start_time" class="datepicker"/>
    </div>
  </div>
  <div class="form-group">
    <label  class="col-sm-2 control-label" for="end_time">End Time</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" name="end_time" id="end_time" class="datepicker"/>
    </div>
  </div>
  <p class="shorttext">
    <label  class="col-sm-2 control-label" for="distribution">Distribution</label>
    <div class="col-sm-10">
      <textarea class="form-control" name="distribution" id="distribution"></textarea>
    </div>
  </div>

  <div class="col-sm-offset-2 col-sm-10">
    <input class="btn btn-primary" type="submit" name="create" value="Create Banner">
    <input class="btn btn-default" type="button" name="cancel" value="Cancel">
  </div>
</form>
